div, nav, ul, a, section, img {
	box-sizing:border-box;
}

*{
	font-family: Helvetica;
  font-weight: bold;
  color: black;
  border-radius: 5px;
}

.content{
  background-color: rgba(255,255,255, 0.75);
  border: solid;
  border-color: rgb(255,255,255);
  border-width: 3px;
  padding: 10px;
  font-size: 25px;
  min-height: 600px;
}

#notice{
  margin: 0 auto;
  font-size: 200%
}

html{
  background-image: url("https://c1.staticflickr.com/3/2030/2809961438_56d48f9969_b.jpg");
  background-size: 100%;
  min-width: 900px;
}
.notice{
	border: 5px solid black;
	margin: 0 auto;
	text-align: center;
}

.main-content{
	border: 5px solid black;
}

body{
  width: 90%;
  margin: 0px 5% 0px;
}
.cohort-details{
  font-size: 20px;
}
.cohort{
  padding: 15px;
}
.total-cohort-info{
  padding-bottom: 40px;
}
.student.name{
  display: block;
  font-size: 25px;
}
.missed-tardies{
  font-size: 15px;
}
.danger-zone{
  width: 350px;
  margin-left: 0px;
}
.student-container{
  border-bottom: solid black;
  border-bottom-width: 2px;
  border-bottom-color: lightgrey;
}
.header{
  font-size: 30px;
}
.producer.name{
  font-size: 20px;
}
.instructor.list{
  display: block;
}
.instructor.name{
  font-size: 20px;
  float: left;
  padding-right: 15px;
}
.graph-box{
  text-align: right;
}

