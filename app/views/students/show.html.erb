<h1><%=@student.first_name%>'s Attendance Stats for Cohort 
  <% if @current_user.type != "Student"%> 
    <a href="/cohorts/<%=params[:cohort_id]%>/students"><%=Cohort.find(params[:cohort_id]).cohort_name%></a>
  <%else%>
    <%=Cohort.find(params[:cohort_id]).cohort_name%>
  <%end%>
  :
</h1>
	<ul>
		<% @student.date_records.each do |record| %>
			<li>Date: <%= record["day"] %></li>
			<li>Attendance: <%= record["attendence"] %></li>
			<% if @current_user.type != "Student"%> 
			<a href = "/date_records/<%=record.id%>/edit">Edit Attendance</a>
			<%end%>
		<% end %>
	</ul>

